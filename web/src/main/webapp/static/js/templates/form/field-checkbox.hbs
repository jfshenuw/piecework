{{#if label}}
<label>{{label}}</label>
{{/if}}
{{#if options}}
    {{#each options}}
        <label class="checkbox">
            <input type="checkbox"
                   name="{{name}}"
                   value="{{value}}"
                    {{#if ../required}}class="required"{{/if}}/> {{label}}
                    {{#if selected}}checked{{/if}}
        </label>
    {{/each}}
{{/if}}
{{#if messages}}
{{#each messages}}
<span class="help-inline generated">{{text}}</span>
{{/each}}
{{/if}}