{{#if label}}
<label>{{label}}</label>
{{/if}}
{{#if options}}
{{#each options}}
<div class="radio">
    <label>
        <input type="radio"
               name="{{../name}}"
               value="{{value}}"
        {{#if ../required}}class="required"{{/if}}
        {{#if selected}}checked{{/if}}
        /> {{label}}
    </label>
</div>
{{/each}}
{{/if}}
{{#if messages}}
{{#each messages}}
<span class="help-inline generated">{{text}}</span>
{{/each}}
{{/if}}