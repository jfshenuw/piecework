{{#if label}}
<label>{{label}}</label>
{{/if}}
{{#if options}}
{{#each options}}
<label class="radio inline">
    <input type="radio"
           name="{{../name}}"
           value="{{value}}"
    {{#if ../required}}class="required"{{/if}}
    {{#if selected}}checked{{/if}}
    /> {{label}}
</label>
{{/each}}
{{/if}}
{{#if messages}}
{{#each messages}}
<span class="help-inline generated">{{text}}</span>
{{/each}}
{{/if}}