<strong>{{processInstanceLabel}}</strong>
<p class="muted">{{processDefinitionLabel}}</p>
<table class="table table-condensed">
    <tr>
        <td><i class="icon-play-circle"></i></td>
        <td>Started</td>
        <td></td>
        <td>{{initiator.displayName}}<br/>
            <span class="text-muted">{{date startTime}}</span></td>
    </tr>
    {{#each events}}
    <tr>
        {{#if task}}
            {{#with task}}
                <td><i class="icon-user"></i></td>
                <td>{{taskLabel}}<br/>
                    <span class="text-muted">{{taskStatus}}</span></td>
                <td>{{#if endTime}}{{datediff endTime startTime}}{{/if}}</td>
            {{/with}}
        {{/if}}
        {{#if operation}}
            <td><i class="{{operation.icon}}"></i></td>
            <td>{{description}}<br/>
                <span class="text-muted">{{operation.reason}}</span></td>
            <td></td>
        {{/if}}
        <td>
            {{user.displayName}}<br/>
            <span class="text-muted">{{date date}}</span>
        </td>
    </tr>
    {{/each}}
    {{#if endTime}}
        <tr>
            <td><i class="icon-off"></i></td>
            <td>Complete</td>
            <td></td>
            <td>{{date endTime}}</td>
        </tr>
    {{/if}}
</table>

